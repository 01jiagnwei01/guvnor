<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

  <id>assembly-guvnor</id>
  <formats>
    <format>dir</format>
    <format>zip</format>
  </formats>

  <includeBaseDirectory>true</includeBaseDirectory>

  <fileSets>
    <fileSet><!-- Note: going outside the module dir is bad, but it is not fetching generated files -->
      <includes>
        <include>../LICENSE-ASL-2.0.txt</include>
      </includes>
      <outputDirectory/>
    </fileSet>
    <fileSet>
      <directory>src/main/assembly/scripts</directory>
      <lineEnding>unix</lineEnding>
      <filtered>true</filtered>
      <outputDirectory>examples</outputDirectory>
      <includes>
        <include>**/*.sh</include>
      </includes>
      <fileMode>755</fileMode>
    </fileSet>
    <fileSet>
      <directory>src/main/assembly/scripts</directory>
      <lineEnding>dos</lineEnding>
      <filtered>true</filtered>
      <outputDirectory>examples</outputDirectory>
      <includes>
        <include>**/*.bat</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>src/main/assembly/docs</directory>
      <filtered>true</filtered>
      <outputDirectory/>
    </fileSet>
    <!-- Binaries -->
    <fileSet>
      <directory>target</directory>
      <includes>
        <include>guvnor-*.war</include>
      </includes>
      <outputDirectory>binaries</outputDirectory>
    </fileSet>
    <!-- Examples -->
    <fileSet><!-- Note: going outside the module dir is bad, but it is not fetching generated files -->
      <directory>../guvnor-examples</directory>
      <outputDirectory>examples/sources</outputDirectory>
      <excludes>
        <exclude>target/**</exclude>
        <exclude>local/**</exclude>
        <exclude>.*/**</exclude>
        <exclude>nbproject/**</exclude>
        <exclude>*.ipr</exclude>
        <exclude>.*.iws</exclude>
        <exclude>*.iml</exclude>
        <exclude>.git/**</exclude>
      </excludes>
    </fileSet>
    <!-- Reference manual -->
    <fileSet><!-- TODO use dependencySet instead https://issues.jboss.org/browse/MPJDOCBOOK-65-->
      <directory>../guvnor-docs/target/docbook/publish/en-US</directory>
      <outputDirectory>reference_manual</outputDirectory>
    </fileSet>
  </fileSets>

</assembly>
